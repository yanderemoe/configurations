-A PREROUTING -p udp -m udp --dport 1050:65530 -j DNAT --to-destination 8.8.1.2:1029
-A PREROUTING -p tcp -m tcp --dport 1050:65530 -j DNAT --to-destination 8.8.1.2:1029
-A INPUT -p tcp -m multiport --dports 1050:65530 -j ACCEPT
-A INPUT -p udp -m multiport --dports 1050:65530 -j ACCEPT
-A OUTPUT -p tcp -m tcp --dport 25 -j REJECT --reject-with icmp-port-unreachable
